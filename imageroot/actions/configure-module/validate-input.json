{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Configure nextcloud",
  "$id": "http://nethserver.org/json-schema/task/input/nextcloud/configure",
  "description": "Configure nextcloud",
  "examples": [
    {
      "host": "nextcloud.myhost.local",
      "lets_encrypt": true,
      "domain": "ad.myhost.local",
      "collabora_host":"collabora.nethserver.org",
      "tls_verify_collabora": true,
      "password": "Nethesis,1234"
    }
  ],
  "type": "object",
  "required": [
    "host",
    "lets_encrypt"
  ],
  "properties": {
    "host": {
      "description": "Host name for Nextcloud, like 'nextcloud.nethserver.org'",
      "format": "idn-hostname",
      "type": "string",
      "minLength": 1
    },
    "lets_encrypt": {
      "type": "boolean",
      "title": "Let's Encrypt certificate",
      "description": "Request a valid Let's Encrypt certificate."
    },
    "domain": {
      "description": "LDAP domain configured inside ldapproxy. If not present, or empty, Nextcloud will use internal database",
      "format": "idn-hostname",
      "type": "string"
    },
    "collabora_host": {
      "description": "Host name for hostname, like 'collabora.nethserver.org'",
      "format": "idn-hostname",
      "type": "string"
    },
    "tls_verify_collabora": {
      "type": "boolean",
      "title": "Verify the certificate of collabora",
      "description": "Request a valid certificate for collabora."
    },
    "password": {
      "description": "Password for admin user. Default is 'Nethesis,1234'",
      "type": "string",
      "minLenght": "2"
    }
  }
}
